{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": false,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "@constants": [
        "src/app.constants"
      ],
      "@utils/*": [
        "src/utils/*"
      ],
      "@enums/*": [
        "src/enums/*"
      ],
      "@modules/*": [
        "src/modules/*"
      ],
      "@models/*": [
        "src/models/*"
      ],
      "@base/*": [
        "src/modules/base/*"
      ],
      "@services/*": [
        "src/services/*"
      ],
      "@entities/*": [
        "src/database/entities/*"
      ]
    }
  },
  "exclude": ["node_modules"]
}
